<h1><%= @article.title %></h1>
<p><%= @article.text %></p>
<% if @article.image.attached? %>
  <div class="">
    <%= image_tag @article.image.variant(resize_to_limit: [500, 500]) %>
  </div>
<% end %>
<%= link_to 'Back to Articles List', articles_path %> |
<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Delete', article_path(@article), method: :delete, data: { confirm: 'Delete this Article? This cannot be undone!' } %>
