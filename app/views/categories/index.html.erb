<div class="index-category-container">
  <% @categories.each do |category| %>
    <div class="index-category-single" style="background-image: url(<%= background_check(category) %>)">
      <div class="index-category-name">
        <%= link_to category.name, category_path(category) %><br />
        <%= article_count_check(category) %>
      </div>
    </div>
  <% end %>
</div>