<% @categories.each do |category| %>
  <%= category.name %><br />
  <% if category.articles.exists? %>
    <h4><%= category.articles.last.title %></h4>
    <%= image_tag category.articles.last.image.variant(resize_to_limit: [300, 300]) %><br />
  <% else %>
    <p>no articles</p>
  <% end %>
<% end %>