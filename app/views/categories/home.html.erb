<div class="featured_article" style="background-image: url(<%= (url_for(@featured_article.image)) %>")>
  <div class="info">
    <div class="feat-title">
      <%= link_to @featured_article.title, article_path(@featured_article) %>
    </div>
    <div class="feat-text">
      <%= @featured_article.text.truncate(300) %>
    </div>
  </div>
</div>

<div class="categories">
  <% @categories.each do |cat| %>
    <div class="single-category" style="background-image: url(
      <% if cat.articles.exists? %>
        <%= (url_for(cat.articles.last.image)) %>)
      <% end %>
      ">
      <div class="title-category"><%=link_to cat.name, category_path(cat) %></div>
      <% if cat.articles.exists? %>
        <div class="title-latest"><%= cat.articles.last.title %></div>
      <% else %>
        <p>No Articles</p>
      <% end %>
    </div>
  <% end %>
</div>