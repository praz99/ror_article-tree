<h1 class="text-center">Sign up</h1>
<div class="row">
  <div class="col-md-4 offset-4">
    <%= form_with(model: @user, local: true) fo |f| %>
      <%= render 'shared/error_messages' %>

      <% f.label :name %>
      <%= f.text_field :name, autofocus: true, class: 'mb-1 form-control' %>

      <%= f.submit 'Register', class: 'mt-2 btn btn-primary' %>
    <% end %>
  </div>
</div>