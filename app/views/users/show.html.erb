<div class="show-user-container">
  <h1><%= @user.name %></h1>
  <h4>My articles</h4>
  <div class="show-user-articles">
    <% if @user.authored_articles.any? %>
      <% @user.authored_articles.each do |article| %>
        <div class="show-user-article-list-options">
          <div class="show-user-article-list">
            <%= link_to article.title, article_path(article) %>
          </div>
          <div class="show-user-article-options">
            <% if @user == current_user %>
              <%= link_to 'edit', edit_article_path(article) %>
              <%= link_to 'delete', article_path(article), method: :delete, data: { confirm: "Delete this article? This cannot be undone." }%><br />
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <% if @user == current_user %>
        <p>You have not written any articles yet. Click <%= link_to 'here', new_article_path %> to write an article.</p>
      <% else %>
        <p>No Articles</p>
      <% end %>
    <% end %>
  </div>
</div>