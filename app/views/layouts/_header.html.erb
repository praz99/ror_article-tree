<nav class="navbar navbar-light bg-light justify-content-between mb-2">
  <div class="container-fluid">
    <div class="navbar-header">
      <%= link_to 'Articles Tree', root_path, class: 'mx-2 navbar-brand' %>
      <%= link_to 'Write an Article', new_article_path %> |
      <%= link_to 'Categories', categories_path %>
    </div>
    
    <div>
      <%= link_to 'Home', root_path %>
      <% categ = Category.ordered_priority.limit(5) %>
      <% categ.each do |cat| %>
        <%= link_to cat.name.capitalize, category_path(cat) %>
      <% end %>
    </div>
    
    <nav class="navbar navbar-light bg-light justify-content-between">
      <% if logged_in? %>
        <%= link_to current_user.name, user_path(current_user) %>
        <%= link_to "log out", logout_path, class: 'mx-2', method: :delete %>
      <% else %>
        <%= link_to "Log in", login_path, class: 'mx-2' %> |
        <%= link_to "Register", signup_path, class: 'mx-2' %>
      <% end %>
    </nav>
  </div>
</nav>
